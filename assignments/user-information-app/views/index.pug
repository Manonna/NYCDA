html
	head
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		link(type="text/css", rel="stylesheet", href="/css/materialize.css")
		link(type="text/css", rel="stylesheet", href="/css/style.css")
		script(type="text/javascript" src="/javascript/jquery-3.1.1.js")
		script(type="text/javascript", src="/javascript/materialize.js")
	body(class="red lighten-5")
		div.navbar-fixed
			nav(class="red lighten-1")
				div.nav-wrapper
					a(href="/" class="brand-logo center") User Information App
					a(href="#" data-activates="mobile-demo" class="button-collapse")
						i(class="material-icons") menu
					ul(id="nav-mobile" class="right hide-on-med-and-down")
						li.active
							a(href='#!') View
						li
							a(href='/search') Search
						li
							a(href='/add') Add
					ul(class="side-nav" id="mobile-demo")
						li
							a(href='/') Home
						li.active
							a(href='#!') View
						li
							a(href='/search') Search
						li
							a(href='/add') Add
		div(class="container white")
			div(class="row valign-wrapper")
				div(class="col s12")
					h5(class="center-align") These are the users in our database:
			div(class="row valign-wrapper")
				div(class="col s12")
					each thing in data
						p Name: #{thing.firstname} #{thing.lastname}
						ul
							li Email: #{thing.email}
